<launch>
  <arg name="robot_name" default="urdf_1"/>

  <rosparam file="$(find urdf_description)/config/controller_configuration.yaml"
            command="load"
            ns="/$(arg robot_name)"/>

  <node
    name="controller_spawner"
    pkg="controller_manager"
    type="spawner"
    ns="/$(arg robot_name)"
    args="
      joint_state_controller urdf_trajectory_controller
    "
    respawn="false"
    output="screen"
  />

</launch>
